<style>
  form {
    padding: 20px;
    border-radius: 8px;
    width: 300px;
    margin: 20px auto;
  }

  form h1 {
    text-align: center;
    color: #333;
  }

  form input {
    width: 100%;
    padding: 10px;
    margin: 8px 0;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  form button {
    background-color: #4caf50;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
  }

  .container-below {
    margin: 20px auto;
    text-align: center;
    color: #555;
  }

  .container-below a {
    color: #4caf50;
    text-decoration: none;
  }

  .container-below a:hover {
    text-decoration: underline;
  }

  .error-messages {
    color: red;
  }
</style>
<main>
  <form action="/" method="post">
    <h1>Sign In</h1>

    <label>Email:</label><br>
    <input type="email" name="email" value="<%= typeof email != 'undefined' && email || '' %>" required><br>

    <label>Password:</label><br>
    <input type="password" name="password" value="<%= typeof password != 'undefined' && password || '' %>" required><br>

    <input type="submit" value="Sign In">

    <% if (typeof errMessages !='undefined' && errMessages && errMessages.length> 0) { %>
      <div class="error-messages">
        <% errMessages.forEach(function(message) { %>
          <p>
            <%= message %>
          </p>
          <% }); %>
      </div>
      <% } %>
  </form>
  <a href="/signup">Sign Up</a>
</main>
