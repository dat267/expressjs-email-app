<style>
  form {
    width: 100%;
    height: 100%;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  form h1 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
  }

  form input {
    width: 100%;
    max-width: 640px;
    padding: 10px;
    margin: 8px 0;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  form button {
    background-color: #4caf50;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
  }

  .container-below {
    margin: 20px auto;
    text-align: center;
    color: #555;
  }

  .container-below a {
    color: #4caf50;
    text-decoration: none;
  }

  .container-below a:hover {
    text-decoration: underline;
  }

  .error-messages {
    color: #EF4444;
    margin-top: 20px;
    margin-bottom: 20px;
  }
</style>
<main>
  <form id="signupForm" action="/signup" method="post">
    <h1>Sign Up</h1>

    <label>Full Name:</label><br>
    <input id="fullNameInput" type="text" name="fullName" value="<%= typeof fullName != 'undefined' && fullName || '' %>" required><br>

    <label>Email:</label><br>
    <input id="emailInput" type="email" name="email" value="<%= typeof email != 'undefined' && email || '' %>" required><br>

    <label>Password:</label><br>
    <input id="passwordInput" type="password" name="password" value="<%= typeof password != 'undefined' && password || '' %>" required><br>

    <label>Repeat Password:</label><br>
    <input id="rePasswordInput" type="password" name="rePassword" value="<%= typeof rePassword != 'undefined' && rePassword || '' %>" required><br>

    <input type="submit" value="Sign Up">

    <% if (typeof errMessages !='undefined' && errMessages && errMessages.length> 0) { %>
    <div class="error-messages">
      <% errMessages.forEach(function(message) { %>
      <p>
        <%= message %>
      </p>
      <% }); %>
    </div>
    <% } %>
    <a href="/">Sign In</a>
  </form>
</main>
