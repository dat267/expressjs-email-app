<style>
  nav {
    overflow: hidden;
    background-color: #1C1917;
  }

  nav a,
  nav span {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px;
  }

  nav a:hover,
  nav span:hover {
    background-color: #ddd;
    color: black;
  }
</style>

<header>
  <nav>
    <% if (typeof user !='undefined' && user) { %>
      <span>
        <%= user.fullName %>
      </span>
      <span>
        <%= user.email %>
      </span>
      <a href="/signout">Sign Out</a>
      <% } else { %>
        <a href="/">Sign in</a>
        <a href="/signup">Sign up</a>
        <% } %>
  </nav>
</header>
