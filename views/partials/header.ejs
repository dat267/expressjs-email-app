<style>
  nav {
    display: flex;
    overflow: hidden;
    background-color: #1c1917
  }

  nav>div:last-child {
    margin-left: auto
  }

  nav a,
  nav span {
    float: left;
    color: #f2f2f2;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    font-size: 17px
  }

  nav a:hover,
  nav span:hover {
    background-color: #ddd;
    color: #000
  }

  .active {
    background-color: #22c55e
  }

  .alt-aside {
    display: none
  }

  @media (max-width:768px) {
    .alt-aside {
      display: block
    }
  }
</style>

<header>
  <nav>
    <div>
      <% if (typeof user !='undefined' && user) { %>
      <span>
        <%= user.fullName %>
      </span>
      <span class="<%= main === 'email' ? 'active' : '' %>">
        <%= user.email %>
      </span>
      <a href="/signout">Sign Out</a>
      <% } else { %>
      <a href="/" class="<%= main === 'signin' ? 'active' : '' %>">Sign in</a>
      <a href="/signup" class="<%= main === 'signup' ? 'active' : '' %>">Sign up</a>
      <% } %>
    </div>
    <div class="alt-aside">
      <a href="/inbox" class="<%= main === 'inbox' ? 'active' : '' %>">Inbox</a>
      <a href="/outbox" class="<%= main === 'outbox' ? 'active' : '' %>">Outbox</a>
      <a href="/compose" class="<%= main === 'compose' ? 'active' : '' %>">Compose</a>
    </div>
  </nav>
</header>
