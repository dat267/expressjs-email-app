{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
